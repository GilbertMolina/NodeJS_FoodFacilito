extends ../layout.jade
block contenido
	div(class="col-md-5 center-block no-float top-space text-left")
		center
			h1(class="pacifico big blue")  Eliminar producto
		form(method="post" action="/menu/#{ product.id }?_method=delete" style="margin-top:1.5em")
			div(class="form-group")
				label Nombre
				input(type="text" name="title" placeholder="Nombre del producto" value="#{ product.title }" class="form-control" readonly)
			div(class="form-group")
				label Descripción
				textarea(name="description" placeholder="Descripción del producto" rows="4" class="form-control" readonly)= product.description
			div(class="form-group")
				label Costo
				input(type="number" name="pricing" placeholder="Costo del producto" value="#{ product.pricing }" class="form-control" readonly)
				hr
			div(class="form-group text-right")
				a(href="/admin" class="btn btn-default col-md-3 text-left") Volver Atrás
				input(type="submit" class="btn btn-danger col-md-2 col-md-offset-7 text-right" value="Eliminar")
				