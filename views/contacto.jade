extends layout.jade
block contenido
	div(class="col-md-5 center-block no-float top-space text-left animated swing")
		center
			h1(class="pacifico big blue") Contáctenos
		form(method="post" action="/menu" style="margin-top:1.5em")
			div(class="form-group")
				label Nombre
				input(type="text" name="name" placeholder="Nombre" class="form-control")
			div(class="form-group")
				label Correo electrónico
				input(name="email" placeholder="Correo electrónico" class="form-control")
			div(class="form-group")
				label Mensaje
				textarea(name="message" placeholder="Mensaje" class="form-control" rows="6")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-success" value="Enviar")
			